
help:
	@echo "Please use \`make <target>' where <target> is one of"
	@echo "  filter        filter data "
	@echo "  ica           use ICA to remove eye blinks "
	@echo "  psds          calculate psds "
	@echo "  all           all processing "
	@echo "  clean	remove intermediate scripts generated by processing"

SUBJ := $(shell cat eeg_subjects.txt)

#SUBJ := sub-S001

all: filter ica psds

filter:

	for i in $(SUBJ); do \
		python 01_freqfilt.py $$i;\
	done

ica:
	for i in $(SUBJ); do \
		python 02_ica.py $$i;\
	done

psds: 
	for i in $(SUBJ); do \
		python 03_psds.py $$i;\
	done

epochs:
	for i in $(SUBJ); do \
		python epochs.py $$i -task restEO;\
	        python epochs.py $$i -task restEC;\
	done




#.PHONY clean
#clean:
#	python clean.py

